@model CrudForCategory.Request.CategoryViewRequest

<h2>Create Category</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <h4>Products</h4>
    <div id="products-container">
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" name="ProductNames" class="form-control" />
        </div>
    </div>
    <button type="button" id="add-product" class="btn btn-secondary">Add Product</button>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        document.getElementById('add-product').addEventListener('click', function () {
            var container = document.getElementById('products-container');
            var newInput = document.createElement('div');
            newInput.className = 'form-group';
            newInput.innerHTML = `
                        <label>Product Name</label>
                        <input type="text" name="ProductNames" class="form-control" />
                    `;
            container.appendChild(newInput);
        });
    </script>
}



