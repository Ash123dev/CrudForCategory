@model IEnumerable<CrudForCategory.Models.ProductMaster>;

<h2>Products</h2>

<table class="table">
	<thead>
		<tr>
			<th>Product ID</th>
			<th>Product Name</th>
			<th>Category ID</th>
			<th>Category Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Id</td>
				<td>@product.ProductName</td>
				<td>@product.CategoryId</td>
				<td>@product.Category.CategoryName</td>
			</tr>
		}
	</tbody>
</table>

<div>
	<ul class="pagination">
		@for (int i = 1; i <= ViewBag.TotalPages; i++)
		{
			<li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
				<a class="page-link" href="@Url.Action("Index", "Product", new { page = i })">@i</a>
			</li>
		}
	</ul>
</div>

<div>
	<a asp-action="Create" class="btn btn-success">Add New Product</a>
</div>